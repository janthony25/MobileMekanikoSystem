@model List<MobileMekanikoSystem.Models.Dto.CustomerListDto>

<h2>Customer List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Contact #</th>
            <th>Email Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.CustomerName</td>
                <td>@customer.CustomerNumber</td>
                <td>@customer.CustomerEmail</td>
                <td><a class="btn btn-warning" asp-controller="CustomerCar" asp-action="GetCustomerCars" asp-route-id="@customer.CustomerId"><i class="bi bi-pencil-square"></i></a></td>
            </tr>
        }
    </tbody>
</table>