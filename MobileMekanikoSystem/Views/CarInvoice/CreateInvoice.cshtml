@model MobileMekanikoSystem.Models.Dto.AddCarInvoiceDto

<h4 class="text-center">Customer Details</h4>

<form asp-action="CreateInvoice" method="post">
    <input type="hidden" asp-for="CarId" />

    <!-- Customer Details -->
    <div class="customer-detail-container d-flex justify-content-between container">
        <div class="create-invoice-cd-left-section">
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control input" readonly />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label"></label>
                <input asp-for="CustomerEmail" class="form-control input" readonly />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="create-invoice-cd-right-section">
            <div class="form-group">
                <label asp-for="CarRego" class="control-label"></label>
                <input asp-for="CarRego" class="form-control input" readonly />
                <span asp-validation-for="CarRego" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarMake" class="control-label"></label>
                <input asp-for="CarMake" class="form-control input" readonly />
                <span asp-validation-for="CarMake" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel" class="control-label"></label>
                <input asp-for="CarModel" class="form-control input" readonly />
                <span asp-validation-for="CarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentStatus" class="control-label"></label>
                <input asp-for="PaymentStatus" class="form-control input" readonly />
                <span asp-validation-for="PaymentStatus" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Invoice Items Section -->
    <div class="invoice-item-container container">
        <div class="heading-title-container d-flex justify-content-center align-items-center">
            <h4 class="heading-title">ITEM LIST</h4>
        </div>
        <div id="invoiceItems" class="invoice-items-container flex-column d-flex mt-2">
            @for (int i = 0; i < Model.InvoiceItems.Count; i++)
            {
                <div class="invoice-item d-flex mb-3">
                    <div class="form-group">
                        <label asp-for="InvoiceItems[@i].ItemName" class="control-label"></label>
                        <input asp-for="InvoiceItems[@i].ItemName" class="form-control input" />
                        <span asp-validation-for="InvoiceItems[@i].ItemName" class="text-danger"></span>
                    </div>
                    <div class="form-group ms-4">
                        <label asp-for="InvoiceItems[@i].Quantity" class="control-label"></label>
                        <input asp-for="InvoiceItems[@i].Quantity" class="form-control" />
                        <span asp-validation-for="InvoiceItems[@i].Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group ms-4">
                        <label asp-for="InvoiceItems[@i].ItemPrice" class="control-label"></label>
                        <input asp-for="InvoiceItems[@i].ItemPrice" class="form-control" />
                        <span asp-validation-for="InvoiceItems[@i].ItemPrice" class="text-danger"></span>
                    </div>
                </div>
            }
        </div>
        <button type="button" id="addItemButton" class="btn btn-primary mt-3">Add Item</button>
    </div>

    <!-- Invoice Details -->
    <div class="invoice-detail-container container d-flex justify-content-between mt-5">
        <div class="left-section">
            <div class="form-group">
                <label asp-for="DateAdded" class="control-label"></label>
                <input asp-for="DateAdded" class="form-control input" type="date" />
                <span asp-validation-for="DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" type="date" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssueName" class="control-label"></label>
                <input asp-for="IssueName" class="form-control" />
                <span asp-validation-for="IssueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentTerm" class="control-label"></label>
                <input asp-for="PaymentTerm" class="form-control" />
                <span asp-validation-for="PaymentTerm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </div>
        <div class="right-section create-customer-invoice-right-section d-flex justify-content-between">
            <div class="left">
                <div class="form-group">
                    <label asp-for="LaborPrice" class="control-label"></label>
                    <input asp-for="LaborPrice" class="form-control" />
                    <span asp-validation-for="LaborPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount" class="control-label"></label>
                    <input asp-for="Discount" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShippingFee" class="control-label"></label>
                    <input asp-for="ShippingFee" class="form-control" />
                    <span asp-validation-for="ShippingFee" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubTotal" class="control-label"></label>
                    <input asp-for="SubTotal" class="form-control" />
                    <span asp-validation-for="SubTotal" class="text-danger"></span>
                </div>
            </div>
            <div class="right">
                <div class="form-group">
                    <label asp-for="TaxAmount" class="control-label"></label>
                    <input asp-for="TaxAmount" class="form-control" />
                    <span asp-validation-for="TaxAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TotalAmount" class="control-label"></label>
                    <input asp-for="TotalAmount" class="form-control" />
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AmountPaid" class="control-label"></label>
                    <input asp-for="AmountPaid" class="form-control" />
                    <span asp-validation-for="AmountPaid" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-5">Submit</button>
</form>

@section Scripts {
    <script>
        let itemIndex = @Model.InvoiceItems.Count;

        document.getElementById('addItemButton').addEventListener('click', function () {
            const itemTemplate = `
                        <div class="invoice-item d-flex mb-3">
                            <div class="form-group">
                                <label>Item Name</label>
                                <input name="InvoiceItems[${itemIndex}].ItemName" class="form-control input" />
                            </div>
                            <div class="form-group ms-4">
                                <label>Quantity</label>
                                <input name="InvoiceItems[${itemIndex}].Quantity" class="form-control" />
                            </div>
                            <div class="form-group ms-4">
                                <label>Item Price</label>
                                <input name="InvoiceItems[${itemIndex}].ItemPrice" class="form-control" />
                            </div>
                        </div>`;
            document.getElementById('invoiceItems').insertAdjacentHTML('beforeend', itemTemplate);
            itemIndex++;
        });
    </script>
}